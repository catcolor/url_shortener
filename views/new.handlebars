<div class="mt-5">
  <h3>Success! Please use this link:</h3>
  <div class="mt-3 w-75 mx-auto">
    <a href="http://localhost:3000/{{random_url}}" target="_blank">
      <h5 id="copy">
        http://localhost:3000/{{random_url}}
      </h5>
    </a>
  </div>
  <a class="btn btn-link mr-2" href="/" role="button">Back</a>
  <button type="submit" class="btn btn-outline-primary w-25 mb-3 mt-2" onclick="copy()">Copy</button>
</div>

<script>
  function copy() {
    const url = document.getElementById('copy')
    navigator.clipboard.writeText(url.innerText)
      .then(() => alert('copied!'))
      .catch(error => console.log(error))
  }
</script>